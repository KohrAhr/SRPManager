<Application x:Class="SRPManagerV2.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:SRPManagerV2"
             ShutdownMode="OnExplicitShutdown">
    <Application.Resources>

        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources\Styles.xaml" />

                <!-- Last resources - is default language -->
                <ResourceDictionary Source="Resources\StringResources.ru-RU.xaml" />
                <ResourceDictionary Source="Resources\StringResources.en-US.xaml" />

                <!-- Depends on language resource! -->
                <ResourceDictionary Source="Resources\NotifyIcon.xaml" />

            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>

    </Application.Resources>
</Application>
